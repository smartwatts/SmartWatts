# SmartWatts Environment Variables Template
# Copy this file to .env and update with your actual values
# DO NOT commit .env files to version control

# ===========================================
# Database Configuration
# ===========================================
# IMPORTANT: Replace all default values with secure values in production
# Use Azure Key Vault or similar secrets management service
POSTGRES_DB=smartwatts
POSTGRES_USER=smartwatts_user
# REQUIRED: Set a strong password (minimum 16 characters, mix of letters, numbers, symbols)
POSTGRES_PASSWORD=
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database Connection Pooling (HikariCP)
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_IDLE=5
DB_POOL_CONNECTION_TIMEOUT=30000
DB_POOL_IDLE_TIMEOUT=600000
DB_POOL_MAX_LIFETIME=1800000
DB_POOL_LEAK_DETECTION_THRESHOLD=60000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# REQUIRED: Set a strong password for Redis
REDIS_PASSWORD=

# ===========================================
# JWT Configuration
# ===========================================
# REQUIRED: Set a secure JWT secret (minimum 256 bits / 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ===========================================
# API Keys
# ===========================================
OPENWEATHER_API_KEY=CHANGE_ME_OPENWEATHER_API_KEY

# ===========================================
# Email Service (SendGrid)
# ===========================================
# REQUIRED: Set SendGrid API key for email notifications
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=info@mysmartwatts.com
SENDGRID_FROM_NAME=SmartWatts

# ===========================================
# SMS Service (Twilio)
# ===========================================
# REQUIRED: Set Twilio credentials for SMS notifications
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ===========================================
# Push Notifications (FCM)
# ===========================================
# REQUIRED: Set FCM server key for push notifications
FCM_SERVER_KEY=
FCM_URL=https://fcm.googleapis.com/fcm/send

# ===========================================
# Service Discovery
# ===========================================
EUREKA_SERVER_URL=http://localhost:8761/eureka/

# ===========================================
# Security
# ===========================================
BCRYPT_ROUNDS=12

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# Production Settings
# ===========================================
SPRING_PROFILES_ACTIVE=production

# ===========================================
# CORS Configuration
# ===========================================
# REQUIRED: Set allowed origins (comma-separated)
# Example: CORS_ALLOWED_ORIGINS=https://mysmartwatts.com,https://app.mysmartwatts.com
# For development: CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_ORIGINS=

# ===========================================
# SSL Configuration (Production)
# ===========================================
SSL_ENABLED=true
# REQUIRED: Set SSL keystore password
SSL_KEYSTORE_PASSWORD=
# REQUIRED: Set SSL truststore password
SSL_TRUSTSTORE_PASSWORD=

# ===========================================
# Monitoring (Production)
# ===========================================
PROMETHEUS_ENABLED=true
# REQUIRED: Set Grafana admin password
GRAFANA_ADMIN_PASSWORD=

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/var/backups/smartwatts

# ===========================================
# Optional: Cloud Storage (Production)
# ===========================================
